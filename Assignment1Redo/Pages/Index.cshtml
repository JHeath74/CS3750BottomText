@page "/Homepage"
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
    ViewBag.ID = Model.user.ID;
    ViewBag.role = Model.user.Role;
}

<div class="text-center">
    <h1 class="display-4">Welcome, @Html.DisplayFor(model => model.user.FirstName) @Html.DisplayFor(model => model.user.LastName)</h1>
</div>
<br />

<div class="container">
    <div class="row">
        @if (ViewBag.role == "Instructor")
        {
            <div class="row">
                <!-- If user is instructor, class cards will take user to Assignment List page for course.-->
                @foreach (var Class in Model.classCards)
                {
                    <div class="col-4 d-flex align-items-stretch">
                        <a class="ccard-click" asp-page="/Assignments/AssignmentList" asp-route-id="@ViewBag.ID" asp-route-courseID="@Class.id">
                            <div class="class-card" style="width: 18rem;">
                                <h4>@Class.className</h4>
                                <h5>@Class.classNum</h5>
                                <p>
                                    Instructor: @Class.instructor <br />
                                    Building: @Class.building <br />
                                    Room: @Class.roomNum <br />
                                    Days: @Class.daysOfWeek <br />
                                    @Class.startTime - @Class.endTime
                                </p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
        @if (ViewBag.role == "Student")
        {
            <div class="col-8 row">
                <!-- If user is instructor, class cards will take user to Assignment List page for course.-->
                @foreach (var Class in Model.classCards)
                {
                    <div class="col-6 d-flex align-items-stretch">
                        <a class="ccard-click" id="card_@Class.id" asp-page="/StudentAssignments/AssignmentList" asp-route-id="@ViewBag.ID" asp-route-courseID="@Class.id">
                            <div class="class-card" style="width: 18rem;">
                                <h4>@Class.className</h4>
                                <h5>@Class.classNum</h5>
                                <p>
                                    Instructor: @Class.instructor <br />
                                    Building: @Class.building <br />
                                    Room: @Class.roomNum <br />
                                    Days: @Class.daysOfWeek <br />
                                    @Class.startTime - @Class.endTime
                                </p>
                            </div>
                        </a>
                    </div>
                }
            </div>

            <div class="col-4">
                <h2>ToDo List</h2>
                @if (Model.list_assignmentinfo.Count() > 0)
                {
                    <div class="overflow-auto border p-2" style="height: 20rem;">
                        @foreach (var Assignment in Model.list_assignmentinfo)
                        {
                            <div class="card mb-2" style="width: 18rem;">
                                <div class="card-body">
                                    @if (Assignment.assignmentType == "Text Entry")
                                    {
                                        <a asp-page="StudentAssignments/TextSubmission" asp-route-id="@ViewBag.ID" asp-route-assignID="@Assignment.assignmentID">
                                            <h5 class="card-title mb-3">@Assignment.assignmentTitle</h5>
                                        </a>
                                    }
                                    else if (Assignment.assignmentType == "File")
                                    {
                                        <a asp-page="StudentAssignments/FileSubmission" asp-route-id="@ViewBag.ID" asp-route-assignID="@Assignment.assignmentID">
                                            <h5 class="card-title mb-3">@Assignment.assignmentTitle</h5>
                                        </a>
                                    }
                                    <p class="card-text">@Assignment.departmentAbbr @Assignment.classNum</p>
                                    <p class="card-text">@Assignment.dueDate</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p stle="font-size: 18px;">Nothing to do!</p>
                }
            </div>
        }
    </div>
</div>

