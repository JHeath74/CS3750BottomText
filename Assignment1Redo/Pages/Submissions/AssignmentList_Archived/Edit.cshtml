@page
@model BottomTextLMS.Pages.Submissions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Assignment.ID" />
            <div class="form-group">
                <label asp-for="Assignment.ClassID" class="control-label"></label>
                <select asp-for="Assignment.ClassID" class="form-control" asp-items="ViewBag.ClassID"></select>
                <span asp-validation-for="Assignment.ClassID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Title" class="control-label"></label>
                <input asp-for="Assignment.Title" class="form-control" />
                <span asp-validation-for="Assignment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Description" class="control-label"></label>
                <input asp-for="Assignment.Description" class="form-control" />
                <span asp-validation-for="Assignment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.DueDate" class="control-label"></label>
                <input asp-for="Assignment.DueDate" class="form-control" />
                <span asp-validation-for="Assignment.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.MaxPoints" class="control-label"></label>
                <input asp-for="Assignment.MaxPoints" class="form-control" />
                <span asp-validation-for="Assignment.MaxPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.AssignmentType" class="control-label"></label>
                <input asp-for="Assignment.AssignmentType" class="form-control" />
                <span asp-validation-for="Assignment.AssignmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
