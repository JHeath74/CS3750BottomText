@page
@model BottomTextLMS.Pages.Submissions.AllSubmissionsEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Submission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Submission.ID" />
            <div class="form-group">
                <label asp-for="Submission.StudentID" class="control-label"></label>
                <input asp-for="Submission.StudentID" class="form-control" />
                <span asp-validation-for="Submission.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Submission.AssignmentID" class="control-label"></label>
                <select asp-for="Submission.AssignmentID" class="form-control" asp-items="ViewBag.AssignmentID"></select>
                <span asp-validation-for="Submission.AssignmentID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Submission.HasSubmitted" /> @Html.DisplayNameFor(model => model.Submission.HasSubmitted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Submission.FileSubmission" class="control-label"></label>
                <input asp-for="Submission.FileSubmission" class="form-control" />
                <span asp-validation-for="Submission.FileSubmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Submission.TextSubmission" class="control-label"></label>
                <input asp-for="Submission.TextSubmission" class="form-control" />
                <span asp-validation-for="Submission.TextSubmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
