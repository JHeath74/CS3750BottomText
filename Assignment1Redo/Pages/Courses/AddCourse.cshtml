@page "{id:int}"
@model BottomTextLMS.Pages.Courses.CreateModel

@{
    ViewData["Title"] = "Add Class";
    ViewBag.ID = Model.prof.ID;
    ViewBag.role = Model.prof.Role;
}

<h1>Add Class</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Class.ClassNumber" class="control-label"></label>
                <input asp-for="Class.ClassNumber" class="form-control" />
                <span asp-validation-for="Class.ClassNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.ClassName" class="control-label"></label>
                <input asp-for="Class.ClassName" class="form-control" />
                <span asp-validation-for="Class.ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.Description" class="control-label"></label>
                @Html.TextAreaFor(m => m.Class.Description, new { @class = "form-control" })
                <span asp-validation-for="Class.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.CreditHours" class="control-label"></label>
                <input asp-for="Class.CreditHours" class="form-control" />
                <span asp-validation-for="Class.CreditHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.DepartmentID" class="control-label"></label>
                <select asp-for="Class.DepartmentID" class="form-control" asp-items="ViewBag.DepartmentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Class.RoomID" class="control-label"></label>
                <select asp-for="Class.RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Class.BuildingID" class="control-label"></label>
                <select asp-for="Class.BuildingID" class="form-control" asp-items="ViewBag.BuildingID"></select>
            </div>
            <div class="form-check-inline">
                <label asp-for="Class.DaysOfWeek" class="control-label"></label>
                <div class="form-check">
                    <label asp-for="Days[0]">M</label>
                    <input asp-for="Days[0]" type="checkbox" value=M />
                    <label asp-for="Days[1]">&nbspT</label>
                    <input asp-for="Days[1]" type="checkbox" value=T />
                    <label asp-for="Days[2]">&nbspW</label>
                    <input asp-for="Days[2]" type="checkbox" value=W />
                    <label asp-for="Days[3]">&nbspTh</label>
                    <input asp-for="Days[3]" type="checkbox" value=Th />
                    <label asp-for="Days[4]">&nbspF</label>
                    <input asp-for="Days[4]" type="checkbox" value=F />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Class.StartTime" class="control-label"></label>
                <input asp-for="Class.StartTime" class="form-control" type="time" date-val="true" />
                <span asp-validation-for="Class.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.EndTime" class="control-label"></label>
                <input asp-for="Class.EndTime" class="form-control" type="time" date-val="true"/>
                <span asp-validation-for="Class.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <input asp-for="Class.InstructorID" class="form-control" value="@ViewBag.ID" />
            </div>
            <div class="form-group">
                <input id="submit_button" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Courses/CourseList" asp-route-id="@ViewBag.ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
